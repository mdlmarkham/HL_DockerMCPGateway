{
  "mcpServers": {
    "markitdown": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "--network=hl_dockermcpgateway_mcp",
        "--name=mcp-markitdown",
        "-v", "/srv/mcp/workspace:/workspace:ro",
        "--security-opt=no-new-privileges:true",
        "--read-only",
        "--tmpfs=/tmp",
        "mcp/markitdown:latest"
      ]
    }
  }
}
